    <div class="index_content">
        <h2>Productos a la venta</h2>

    
        <div class="product_card_container">
            <% if ( products.length !== 0) { %>
                <div class="button_to_scroll_responsive_purposes">
                    <button class="buttons_to_scroll" onclick="scrollContentToRight()"><i class="fa-solid fa-chevron-left"></i></button>
                </div>
                <div class="cover_product_elements">
                    <% products.forEach((item) => { %>
                        <div class="product_card">
                            <div class="card_image_side">
                                <a href="/product/<%= item._id %>/information">
                                    <% imagesCollectionGot.forEach((image) => { %>
                                        <% if ( image.productId && item._id ) { %>
                                            <% if ( image.productId.toString() === item._id.toString() ) { %>
                                                <img src="<%= image.imagePath1 %>" alt="" />
                                            <% } %>
                                        <% } %>
                                    <% }) %>
                                </a>
                                <% if (session.user) { %>
                                    <% if (favoritesProducts.includes(item._id.toString())) { %>
                                        <a href="#" data-productid="<%= item._id %>" class="card_image_side_favorites_added">
                                            <i class="ri-bookmark-fill"></i>
                                        </a>
                                    <% } else { %>
                                        <a href="#" data-productid="<%= item._id %>" class="card_image_side_favorites">
                                            <i class="ri-bookmark-fill"></i>
                                        </a>
                                    <% } %>
                                <% } %>
                            </div>
                            <div class="card_product_info_side">
                                <p><%= item.name %></p>
                                <span style="font-size: 18px;">$<%= item.price %></span>
                            </div>
                            <div class="card_extra_info">
                                <p><%= item.companyName %></p>
                                <div class="card_extra_info_rate">
                                    <!-- <i class="fa-solid fa-star"></i>
                                    <i class="fa-solid fa-star"></i>
                                    <i class="fa-solid fa-star"></i>
                                    <i class="fa-solid fa-star"></i>
                                    <i class="fa-solid fa-star"></i>
                                    <span>(<%= item.rate %>)</span> -->
                                </div>
                            </div>
                            <a id="see_information_a" href="/product/<%= item._id %>/information">Ver informacion</a>
                        </div>
                    <% }) %>
                </div>
                <div class="button_to_scroll_responsive_purposes">
                    <button class="buttons_to_scroll" onclick="scrollContentToLeft()"><i class="fa-solid fa-chevron-right"></i></button>
                </div>
            <% } %>
        </div>

